<Window x:Class="PrintingServiceInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintingServiceInstaller"
        mc:Ignorable="d"
          WindowStyle="ToolWindow" BorderBrush="Transparent"  
        Title="Printing Service Installer" Height="230" Width="375">
    <Grid>
        <StackPanel Margin="0,0,0,-15" Height="225" VerticalAlignment="Top">
            <TextBlock Text=" Printing Service Installer"  Margin="10" />


            <Button  Content="Install Service "  Margin="10"  
                         Name="InstallBtn" Click="InstallBtn_Click"/>

            <Button Content="Uninstall Service"  Margin="10" 
                        Name="UninstallServiceBtn" Click="UninstallServiceBtn_Click" />

            <Button  Content="Cancel" Margin="10"  
                         Name="CancelBtn" Click="CancelBtn_Click" />

            <Button  Content="Config" Margin="10"  
                         Name="ConfigBtn" Click="CancelBtn_Click" />

        </StackPanel>
    </Grid>
</Window>
